---
import Layout from "@layouts/Layout.astro";

const text = "#f00";
const bg = "#ff0";
---

<Layout title="変数の定義">
  <p class="main">こんにちは、世界！</p>
  <style define:vars={{ text, bg }}>
    .main {
      border: 1px solid #000;
      padding: 7px;
      color: var(--text);
      background-color: var(--bg);
    }
  </style>
</Layout>
